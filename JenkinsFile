pipeline {
    agent any 

    environment {
        DOCKER_CREDENTIALS_ID = 'docker-cred' // Jenkins credentials ID for Docker Hub
        DOCKER_IMAGE_NAME = 'raghavdiwakar/cicd-image'
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull the latest code from the GitHub repository
                git url: 'https://github.com/Raghav-Diwakar/CICD.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Get the latest version tag from Docker Hub
                    def latestTag = sh(script: "docker images --format '{{.Tag}}' ${DOCKER_IMAGE_NAME} | sort -V | tail -n 1 || echo '0'", returnStdout: true).trim()
                    def newVersion = latestTag == '0' ? 1 : (latestTag.toInteger() + 1)
                    def newTag = "${newVersion}"

                    // Build the Docker image
                    sh "docker build -t ${DOCKER_IMAGE_NAME}:${newTag} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: DOCKER_CREDENTIALS_ID, usernameVariable: 'raghavdiwakar', passwordVariable: 'Raghav@0131')]) {
                        sh "echo \$DOCKER_HUB_PASSWORD | docker login -u \$DOCKER_HUB_USERNAME --password-stdin"
                    }
                    
                    // Push the new Docker image to Docker Hub
                    sh "docker push ${DOCKER_IMAGE_NAME}:${newTag}"
                }
            }
        }
    }
}
