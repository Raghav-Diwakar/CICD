pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'raghavdiwakar/cicd'
        DOCKER_CREDENTIALS_ID = 'docker-cred' // Add your Docker Hub credentials ID
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Raghav-Diwakar/CICD.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Get the latest image tags
                    def latestTag = sh(script: "docker images ${DOCKER_IMAGE} --format '{{.Tag}}' | sort -V | tail -n 1", returnStdout: true).trim()
                    def newTag = "${latestTag.split('\\.')[0]}.${latestTag.split('\\.')[1].toInteger() + 1}"

                    // Build the new image
                    sh "docker build -t ${DOCKER_IMAGE}:${newTag} ."
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: DOCKER_CREDENTIALS_ID, usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    script {
                        sh "echo ${DOCKER_PASSWORD} | docker login -u ${DOCKER_USERNAME} --password-stdin"
                        sh "docker push ${DOCKER_IMAGE}:${newTag}"
                    }
                }
            }
        }
    }
}
