pipeline {
    agent any
    stages {
        stage('Check GitHub Configuration') {
            steps {
                script {
                    // Replace with your GitHub repository URL
                    def repoUrl = 'https://github.com/Raghav-Diwakar/CICD.git'
                    // Optional: Use credentials ID if required
                    def credentialsId = 'github'

                    // Check if the Git installation exists
                    if (sh(script: 'git --version', returnStatus: true) != 0) {
                        error "Git is not installed or not configured correctly."
                    }

                    // Try to clone the repository to check GitHub configuration
                    def result = sh(script: "git clone ${repoUrl} --branch main --single-branch", returnStatus: true)
                    
                    if (result == 0) {
                        echo "Successfully cloned the repository. GitHub is configured correctly."
                    } else {
                        error "Failed to clone the repository. Check your GitHub credentials or repository URL."
                    }
                }
            }
        }
    }
}
